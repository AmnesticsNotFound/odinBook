  div(class='col-sm-5')   
    h1 Welcome, Please Register

    
        

    form(method='POST' enctype="multipart/form-data" action='')
      div.form-group
        label(for="img") Profile Picture:
        input(type='file' name='file' required='true')
      
        //label(for="img") Profile Picture:
        //input(type='file' placeholder='who.jpg' name='img' required='true')

        label(for='username') Username:
        input#username.form-control(type='text' placeholder='Username' name='username' required='true')

        label(for='password') Password:
        input#password.form-control(type='password' placeholder='Password' name='password' required='true')
        
        button.btn.btn-primary(type='submit') Submit
        a(href="/") Login
      
  if error
    ul
      li= error

  